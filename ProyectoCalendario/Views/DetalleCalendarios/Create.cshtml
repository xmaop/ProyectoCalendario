@model ProyectoCalendario.Models.DetalleCalendario

@{
    ViewBag.Title = "Crear detalle Calendario";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>DetalleCalendario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-2">Calendario</div>
            <div class="col-md-10">
                @Html.DropDownList("CalendarioId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CalendarioId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Vacuna</div>
            <div class="col-md-10">
                @Html.DropDownList("VacunaId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.VacunaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Edad Minima</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.edadmin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.edadmin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Edad Maxima</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.edadmax, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.edadmax, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Nro Veces</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.numeroveces, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.numeroveces, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Via Aplicacion</div>
            <div class="col-md-10">
                <select id="viaaplicacion" name="viaaplicacion">
                    <option>Intramuscular</option>
                    <option>Subcutáneo</option>
                    <option>Intradérmico</option>
                    <option>Endovenoso</option>
                    <option>Oral</option>
                </select>
                @Html.ValidationMessageFor(model => model.viaaplicacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Volumen</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.volumen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.volumen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Unidad</div>
            <div class="col-md-10">
                <input name="unidad" class="form-control text-box single-line" id="unidad" type="text" value="cc" readonly>
                @Html.ValidationMessageFor(model => model.unidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Efectos</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.efectos, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.efectos, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/Scripts/Calendarioscript.js")
}
